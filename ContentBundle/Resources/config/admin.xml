<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- POST -->
        <parameter key="iphp.content.admin.content.class">Iphp\ContentBundle\Admin\ContentAdmin</parameter>
        <parameter key="iphp.content.admin.post.controller">SonataAdminBundle:CRUD</parameter>
        <parameter key="iphp.content.admin.post.entity">Application\Iphp\ContentBundle\Entity\Content</parameter>
        <parameter key="iphp.content.admin.post.translation_domain">IphpContentBundle</parameter>

    </parameters>

    <services>

        <service id="iphp.content.admin.content" class="%iphp.content.admin.content.class%">
            <tag name="sonata.admin" manager_type="orm" group="Контент" label="Материалы" />
            <argument />
            <argument>%iphp.content.admin.post.entity%</argument>
            <argument>%iphp.content.admin.post.controller%</argument>

            <call method="setUserManager">
                <argument type="service" id="fos_user.user_manager" />
            </call>

            <call method="setPoolFormatter">
                <argument type="service" id="sonata.formatter.pool" />
            </call>


            <call method="setTranslationDomain">
                <argument>%iphp.content.admin.post.translation_domain%</argument>
            </call>
        </service>

    </services>

</container>