<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>

        <!-- Сервис получения данных о рубрике по пути к рубрике -->
        <service id="iphp.core.rubric.fabric" class="Iphp\CoreBundle\Model\RubricFactory">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="service_container" />
        </service>

         <service id="iphp.core.twig" class="Iphp\CoreBundle\DependencyInjection\TwigExtension">
            <argument type="service" id="twig" />
            <argument type="service" id="iphp.core.rubric.fabric" />
            <tag name="twig.extension" />
        </service>





    </services>

</container>