      <span class="label"><a href="http://informika.ru" rel="noreferrer" style="text-decoration: none; color: black">Informika</a></span>
   </div>
 {% endblock %}


 {% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('asset/tiny_mce/jquery.tinymce.js') }}"></script>

    {# для genemu#}
    {% if form is defined %}{{ form_javascript(form) }}{% endif %}


   <script>

       $(function() {

         //аццкий хак!
         $('.uploadfilepath').each  ( function () {
             if (!$(this).val()) return;
             var href =  $(this).attr ('filepath')+$(this).val();
             $(this).hide().parent().append ('<a target="_blank" href="'+href+'">'+href+'</a>');
         });




         $('.uploadfile').live ('change', function() {
             var val =  ($(this).val());
             $(this).parent().next().find('.uploadfilepath').show().val (val);
         })
       });
   </script>


 {% endblock %}


 {% block stylesheets %}
