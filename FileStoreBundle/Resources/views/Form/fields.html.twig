{% block iphp_file_widget %}


{% set fileData = value %}
<div {{ block('widget_container_attributes') }}>

    <div style="float:left">{{ form_widget(form.file) }}</div>

    {% if fileData %}
    {% set fileUrl =  fileData.path ~ '/' ~ fileData.fileName|url_encode()  %}


    <div style="float:left">
    <table>
        <tr>
            {% if fileData.width is defined %}
            <td><a href="{{ fileUrl }}" target="_blank" class="full-img-link"><img
                    src="{{ fileUrl }}" width="200" border="0"></a></td>
            <td>&nbsp;&nbsp;&nbsp;</td>
            {% endif %}
            <td style="vertical-align: top;">

                <a href="{{ fileUrl }}" target="_blank" class="full-img-link">{{ fileData.originalName }}</a>,
                <span style="white-space: nowrap">{{ fileData.size /1000}}кб</span>
                <br> {{  fileData.width is defined ? fileData.width ~ 'x' ~ fileData.height : ""}}

                {{ form_row (form.delete, {'label_attr' : { 'style' :'width:auto;padding-right:10px'}})}}

            </td>

        </tr>
    </table>
    </div>

    {% endif %}




    {# dump( value) #}
</div>


        {% endblock iphp_file_widget%}